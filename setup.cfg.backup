[metadata]
name = markdown-css
version = 0.0.8
author = sanyuesha
author_email = wecatch.me@gmail.com
description = Markdown-css is a command tool to convert css style to markdown inline-style
long_description = file: README.rst
long_description_content_type = text/x-rst
url = http://github.com/wecatch/markdown-css
license = MIT
classifiers =
    Development Status :: 4 - Beta
    Intended Audience :: Developers
    License :: OSI Approved :: MIT License
    Programming Language :: Python :: 3
    Programming Language :: Python :: 3.6
    Programming Language :: Python :: 3.7
    Programming Language :: Python :: 3.8
    Programming Language :: Python :: 3.9
    Programming Language :: Python :: 3.10
    Programming Language :: Python :: 3.11
    Topic :: Text Processing :: Markup
    Topic :: Software Development :: Libraries :: Python Modules
keywords = markdown-css markdown css weixin

[options]
packages = find:
python_requires = >=3.6
install_requires =
    docopt
    cssutils
    pyquery
    Pygments>=2.15.0
scripts =
    markdown_css/bin/markdown-css

[options.packages.find]
include = markdown_css*

[bdist_wheel]
universal = 1

[build_sphinx]
source-dir = docs/
build-dir = docs/_build/
all_files = 1

[upload_docs]
upload-dir = docs/_build/html 